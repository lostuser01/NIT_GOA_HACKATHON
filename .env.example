# CityPulse Environment Variables
# Copy this file to .env.local for local development

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration (optional - defaults to localhost:3000/api in development)
# NEXT_PUBLIC_API_URL=http://localhost:3000/api

# JWT Secret (CHANGE THIS IN PRODUCTION!)
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=citypulse-secret-key-change-in-production

# Database (Optional - Currently using in-memory storage)
# Uncomment and configure when ready to use a real database

# PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/citypulse

# MongoDB
# MONGODB_URI=mongodb://localhost:27017/citypulse

# Supabase
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# File Upload (Optional - for photo uploads)
# Cloudinary
# NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# AWS S3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=citypulse-uploads

# Maps API (Optional - for interactive maps)
# Google Maps
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Mapbox
# NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token

# MapTiler
# NEXT_PUBLIC_MAPTILER_API_KEY=your-maptiler-key

# Email Service (Optional - for notifications)
# SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@citypulse.com

# Resend
# RESEND_API_KEY=your-resend-api-key

# Analytics (Optional)
# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics
# NEXT_PUBLIC_VERCEL_ANALYTICS=true

# Rate Limiting (Optional)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Optional)
# ALLOWED_ORIGINS=http://localhost:3000,https://citypulse.vercel.app

# Session Configuration
# SESSION_SECRET=your-session-secret
# SESSION_MAX_AGE=604800000

# Feature Flags (Optional)
# ENABLE_REGISTRATION=true
# ENABLE_COMMENTS=true
# ENABLE_VOTING=true
# ENABLE_FILE_UPLOADS=true

# Development/Production Mode
NODE_ENV=development
